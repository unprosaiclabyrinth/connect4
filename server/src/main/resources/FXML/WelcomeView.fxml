<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox ?>

<VBox xmlns:fx="https://javafx.com/fxml/1" styleClass="Border" fx:id="root" fx:controller="WelcomeController" prefHeight="400" prefWidth="350" spacing="50"
      style="-fx-background-color:Black;" >
	<TextField fx:id="title" text="Connect 4 - Server" editable="false" alignment="center" />
	<TextField fx:id="instruction" text="Press 'ON' to start the server" editable="false" alignment="center" />
	<HBox alignment="center" style="-fx-background-color: Black">
		<Button fx:id="on" text="ON" prefHeight="75" prefWidth="75"/>
	</HBox>
</VBox>
	  
